{
	"name": "apigw-fargate-stacks-cloud",
	"version": "1.0.0",
	"author": "Chris Wilton-Magras",
	"bin": {
		"cloud": "bin/cloud.js"
	},
	"scripts": {
		"synth:http": "cdk synth -q \"*\" --app \"npx tsx -r dotenv/config bin/app-httpapi.ts\"",
		"synth:rest": "cdk synth -q \"*\" --app \"npx tsx -r dotenv/config bin/app-restapi.ts\"",
		"deploy": "cdk deploy --all --app cdk.out",
		"deploy:ui": "cd ../ui && npm run build && aws s3 sync dist s3://demo-apigwfargate-host-bucket --delete",
		"destroy": "cdk destroy --all --app cdk.out",
		"clean": "npx rimraf cdk.out"
	},
	"devDependencies": {
		"@types/node": "^18.19.14",
		"@types/source-map-support": "^0.5.10",
		"aws-cdk": "^2.126.0",
		"ts-node": "^10.9.2",
		"tsx": "^4.7.0",
		"typescript": "^5.3.3"
	},
	"dependencies": {
		"aws-cdk-lib": "2.126.0",
		"constructs": "^10.0.0",
		"dotenv": "^16.4.1",
		"source-map-support": "^0.5.21"
	}
}
